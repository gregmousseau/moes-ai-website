---
const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { name: 'Features', href: '#features' },
    { name: 'Pricing', href: '#pricing' },
    { name: 'Documentation', href: '#' },
    { name: 'Changelog', href: '#' }
  ],
  company: [
    { name: 'About', href: '#' },
    { name: 'Blog', href: '#' },
    { name: 'Careers', href: '#' },
    { name: 'Contact', href: 'mailto:hello@moes.ai' }
  ],
  legal: [
    { name: 'Privacy Policy', href: '#' },
    { name: 'Terms of Service', href: '#' },
    { name: 'Cookie Policy', href: '#' }
  ]
};
---

<footer class="border-t border-slate-800 bg-[#0a0a14]">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand column -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="flex items-center gap-1 text-xl font-bold mb-4">
          <span class="text-white">moes</span><span class="text-violet-500">.ai</span>
        </a>
        <p class="text-sm text-slate-400 mb-4">
          AI agents that just work. Deploy intelligent automation across all your channels.
        </p>
        <!-- Canadian badge -->
        <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-slate-800/50 border border-slate-700/50 rounded-full text-xs text-slate-400">
          <span>üçÅ</span>
          <span>Made in Canada</span>
        </div>
      </div>
      
      <!-- Product links -->
      <div>
        <h4 class="text-sm font-semibold text-white mb-4">Product</h4>
        <ul class="space-y-3">
          {footerLinks.product.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-slate-400 hover:text-white transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Company links -->
      <div>
        <h4 class="text-sm font-semibold text-white mb-4">Company</h4>
        <ul class="space-y-3">
          {footerLinks.company.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-slate-400 hover:text-white transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Legal links -->
      <div>
        <h4 class="text-sm font-semibold text-white mb-4">Legal</h4>
        <ul class="space-y-3">
          {footerLinks.legal.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-slate-400 hover:text-white transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Bottom bar -->
    <div class="mt-12 pt-8 border-t border-slate-800 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-sm text-slate-500">
        &copy; {currentYear} Moes.ai. All rights reserved.
      </p>
      
      <!-- Social links -->
      <div class="flex items-center gap-4">
        <a href="https://twitter.com/moesai" target="_blank" rel="noopener noreferrer" class="text-slate-400 hover:text-white transition-colors" aria-label="Twitter">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
