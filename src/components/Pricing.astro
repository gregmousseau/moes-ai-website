---
const plans = [
  {
    name: 'Free',
    subtitle: 'Self-hosted',
    price: '$0',
    period: 'forever',
    description: 'Full control, your infrastructure',
    features: [
      'Unlimited agents',
      'All channels supported',
      'Community support',
      'Self-host anywhere',
      'Full source access'
    ],
    cta: 'View on GitHub',
    ctaLink: '#',
    popular: false
  },
  {
    name: 'Starter',
    subtitle: 'For small teams',
    price: '$49',
    period: '/month',
    description: 'Everything you need to get started',
    features: [
      'Up to 3 agents',
      'All channels included',
      '5,000 messages/month',
      'Basic analytics',
      'Email support',
      '7-day message history'
    ],
    cta: 'Join Waitlist',
    ctaLink: '#waitlist',
    popular: false
  },
  {
    name: 'Pro',
    subtitle: 'For growing teams',
    price: '$149',
    period: '/month',
    description: 'Advanced features for scaling',
    features: [
      'Up to 10 agents',
      'All channels included',
      '25,000 messages/month',
      'Advanced analytics',
      'Priority support',
      '90-day message history',
      'Custom branding',
      'API access'
    ],
    cta: 'Join Waitlist',
    ctaLink: '#waitlist',
    popular: true
  },
  {
    name: 'Enterprise',
    subtitle: 'For large organizations',
    price: 'Custom',
    period: '',
    description: 'Tailored for your needs',
    features: [
      'Unlimited agents',
      'Unlimited messages',
      'Dedicated support',
      'Custom integrations',
      'SLA guarantee',
      'Self-hosted option',
      'SSO & SAML',
      'Audit logs'
    ],
    cta: 'Contact Sales',
    ctaLink: 'mailto:hello@moes.ai',
    popular: false
  }
];
---

<section id="pricing" class="py-20 md:py-32">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold mb-4">
        Simple, transparent <span class="text-violet-400">pricing</span>
      </h2>
      <p class="text-lg text-slate-400 max-w-2xl mx-auto">
        Start free and scale as you grow. No hidden fees, no surprises.
      </p>
    </div>
    
    <!-- Pricing grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {plans.map((plan) => (
        <div class={`relative flex flex-col p-6 bg-slate-800/30 border rounded-2xl ${plan.popular ? 'border-violet-500 ring-1 ring-violet-500/20' : 'border-slate-700/50'}`}>
          {plan.popular && (
            <div class="absolute -top-3 left-1/2 -translate-x-1/2 px-3 py-1 bg-violet-500 text-white text-xs font-semibold rounded-full">
              Most Popular
            </div>
          )}
          
          <div class="mb-6">
            <h3 class="text-lg font-semibold text-white">{plan.name}</h3>
            <p class="text-sm text-slate-500">{plan.subtitle}</p>
          </div>
          
          <div class="mb-4">
            <span class="text-4xl font-bold text-white">{plan.price}</span>
            {plan.period && <span class="text-slate-400">{plan.period}</span>}
          </div>
          
          <p class="text-sm text-slate-400 mb-6">{plan.description}</p>
          
          <ul class="space-y-3 mb-8 flex-1">
            {plan.features.map((feature) => (
              <li class="flex items-start gap-2 text-sm text-slate-300">
                <svg class="w-5 h-5 text-violet-400 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
          
          <a 
            href={plan.ctaLink}
            class={`block text-center px-4 py-3 rounded-lg font-medium transition-colors ${
              plan.popular 
                ? 'bg-violet-600 hover:bg-violet-500 text-white' 
                : 'bg-slate-700/50 hover:bg-slate-700 text-white'
            }`}
          >
            {plan.cta}
          </a>
        </div>
      ))}
    </div>
    
    <!-- FAQ teaser -->
    <div class="mt-16 text-center">
      <p class="text-slate-400">
        Have questions? <a href="mailto:hello@moes.ai" class="text-violet-400 hover:text-violet-300 underline">Contact us</a>
      </p>
    </div>
  </div>
</section>
