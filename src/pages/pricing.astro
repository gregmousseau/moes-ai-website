  <script>
    // Billing toggle
    let interval = 'month';
    const btnMonthly = document.getElementById('btn-monthly');
    const btnAnnual = document.getElementById('btn-annual');
    const priceStarter = document.getElementById('price-starter');
    const pricePro = document.getElementById('price-pro');
    const periodTexts = document.querySelectorAll('.period-text');

    function setInterval(newInterval) {
      interval = newInterval;
      btnMonthly.classList.toggle('active', interval === 'month');
      btnAnnual.classList.toggle('active', interval === 'year');
      if (interval === 'year') {
        priceStarter.textContent = '$290';
        pricePro.textContent = '$790';
        periodTexts.forEach(el => el.textContent = 'year');
      } else {
        priceStarter.textContent = '$29';
        pricePro.textContent = '$79';
        periodTexts.forEach(el => el.textContent = 'month');
      }
    }

    btnMonthly.addEventListener('click', () => setInterval('month'));
    btnAnnual.addEventListener('click', () => setInterval('year'));

    // Checkout
    async function handleCheckout(plan) {
      const btn = document.querySelector(`[data-plan="${plan}"]`);
      const email = prompt('Enter your email address to continue:');
      if (!email || !email.includes('@')) return;

      btn.disabled = true;
      btn.textContent = 'Redirecting...';

      try {
        const res = await fetch('/api/checkout', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ plan, email, interval }),
        });
        const data = await res.json();
        if (data.url) {
          window.location.href = data.url;
        } else {
          alert(data.error || 'Something went wrong. Please try again.');
          btn.disabled = false;
          btn.textContent = 'Get Started';
        }
      } catch (err) {
        alert('Network error. Please try again.');
        btn.disabled = false;
        btn.textContent = 'Get Started';
      }
    }

    // Show success/cancel banners
    const params = new URLSearchParams(window.location.search);
    if (params.get('success') === 'true') {
      document.getElementById('success-banner').style.display = 'block';
    }
    if (params.get('canceled') === 'true') {
      document.getElementById('canceled-banner').style.display = 'block';
    }

    // Nav scroll
    window.addEventListener('scroll', () => {
      document.getElementById('nav').classList.toggle('scrolled', window.scrollY > 20);
    });
  </script>

