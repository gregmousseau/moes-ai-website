              referrer: document.referrer || null
            })
          });

          if (response.ok || response.status === 409) {
            button.textContent = '‚úì You\'re in!';
            button.classList.remove('bg-blue', 'hover:bg-blue-light');
            button.classList.add('bg-green-600');
            (form.querySelector('input[type="email"]') as HTMLInputElement).disabled = true;
          } else {
            throw new Error('Failed to submit');
          }
        } catch (err) {
          console.error('Waitlist error:', err);
          button.textContent = originalText;
          button.disabled = false;
          alert('Something went wrong. Please try again.');
        }
      }

      document.querySelectorAll('#hero-form, #cta-form').forEach(form => {
        form.addEventListener('submit', async (e) => {
          e.preventDefault();
          const email = (form.querySelector('input[type="email"]') as HTMLInputElement).value;
          await submitWaitlist(email, form as HTMLFormElement);
        });
      });

      // ===== Nav scroll effect =====
      const nav = document.getElementById('main-nav');
      window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
          nav?.classList.add('nav-scrolled');
        } else {
          nav?.classList.remove('nav-scrolled');
        }
      });

      // ===== Scroll reveal (Intersection Observer) =====
      const revealObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
            revealObserver.unobserve(entry.target);
          }
        });
      }, { threshold: 0.1 });

      document.querySelectorAll('.reveal').forEach(el => revealObserver.observe(el));

      // ===== Counter animation =====
      const counterObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const el = entry.target as HTMLElement;
            const target = parseInt(el.dataset.target || '0');
            if (target === 0) return;
            let current = 0;
            const step = Math.max(1, Math.floor(target / 40));
            const interval = setInterval(() => {
              current += step;
              if (current >= target) {
                current = target;
                clearInterval(interval);
              }
              el.textContent = current.toString();
            }, 30);
            counterObserver.unobserve(el);
          }
        });
      }, { threshold: 0.5 });

      document.querySelectorAll('.counter-value[data-target]').forEach(el => counterObserver.observe(el));

      // ===== Chat animation =====
      const chatMessages = [
        { sender: 'user', text: 'Check my calendar and reschedule the 3pm meeting to tomorrow' },
        { sender: 'moe', text: 'Done. Moved your meeting with Sarah to tomorrow at 3pm. I also noticed a conflict with your dentist appointment ‚Äî want me to move that too?' },
        { sender: 'user', text: 'Yes, move it to Thursday' },
        { sender: 'moe', text: '‚úì Rescheduled to Thursday 2pm. Both Sarah and Dr. Chen have been notified.' },
      ];

      function createMessageEl(msg: typeof chatMessages[0]) {
        const wrapper = document.createElement('div');
        wrapper.className = `flex ${msg.sender === 'user' ? 'justify-end' : 'justify-start'} chat-message`;

        const bubble = document.createElement('div');
        if (msg.sender === 'user') {
          bubble.className = 'bg-blue/20 text-text-primary rounded-2xl rounded-br-md px-4 py-2.5 max-w-[85%] text-sm';
        } else {
          bubble.className = 'bg-surface-hover text-text-primary rounded-2xl rounded-bl-md px-4 py-2.5 max-w-[85%] text-sm';
        }
        bubble.textContent = msg.text;
        wrapper.appendChild(bubble);
        return wrapper;
      }

      function createTypingEl() {
        const wrapper = document.createElement('div');
        wrapper.className = 'flex justify-start chat-message';
        wrapper.innerHTML = `<div class="bg-surface-hover rounded-2xl rounded-bl-md px-4 py-3 flex gap-1.5">
          <span class="w-2 h-2 bg-text-muted rounded-full typing-dot"></span>
          <span class="w-2 h-2 bg-text-muted rounded-full typing-dot"></span>
          <span class="w-2 h-2 bg-text-muted rounded-full typing-dot"></span>
        </div>`;
        return wrapper;
      }

      async function runChat() {
        const container = document.getElementById('chat-messages');
        if (!container) return;

        for (let i = 0; i < chatMessages.length; i++) {
          const msg = chatMessages[i];

          if (msg.sender === 'moe') {
            const typing = createTypingEl();
            container.appendChild(typing);
            container.scrollTop = container.scrollHeight;
            await new Promise(r => setTimeout(r, 1200));
            container.removeChild(typing);
          } else {
            await new Promise(r => setTimeout(r, 600));
          }

          container.appendChild(createMessageEl(msg));
          container.scrollTop = container.scrollHeight;
          await new Promise(r => setTimeout(r, 800));
        }
      }

      // Start chat animation after a brief delay
      setTimeout(runChat, 1000);
    </script>
  </body>
