    <!-- ========== 3. THE PROBLEM ========== -->
    <section class="py-24">
      <div class="max-w-6xl mx-auto px-6">
        <div class="text-center mb-16 reveal">
          <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold font-heading mb-4">AI Assistants Are Broken</h2>
